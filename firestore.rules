rules_version = '2';
service cloud.firestore {
    match /databases/{database}/documents {
        function isAuth() {
            return request.auth != null;
        }
        function isAdmin() {
            return request.auth.token.get("admin", null) == true;
        }

        match /articles/{articleId} {
            allow read: if isAuth();
            allow write: if isAuth() && isAdmin();
        }

        match /quizzes/{game=**} {
            allow read: if isAuth();
            allow write: if isAuth() && isAdmin();
        }
    }
}